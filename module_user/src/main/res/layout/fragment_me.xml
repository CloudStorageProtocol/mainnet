<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161618"
    android:orientation="vertical"
    >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="274dp"
            android:layout_marginTop="7dp"
            android:src="@mipmap/ic_me_head"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lly_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="165dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_corners_10_25262f">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JIANG"
                    android:textColor="#ffffffff"
                    android:layout_marginTop="35dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:121454121"
                    android:textColor="#ffffffff"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="17dp"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_user_head"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="140dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/avatar"/>
            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R1"
                android:textColor="#fffacc14"
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="175dp"
                android:layout_marginLeft="20dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="285dp"
                android:background="#5025262F">

                <TextView
                    android:id="@+id/tv_invite_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="邀请好友"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:drawableLeft="@mipmap/ic_about"
                    android:drawableRight="@mipmap/ic_arrow_right"
                    android:drawablePadding="13dp"
                    android:gravity="center_vertical"
                    android:padding="13dp"
                    />

                <View style="@style/ViewLineStyle"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"/>

                <TextView
                    android:id="@+id/tv_safe_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="安全中心"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:drawableLeft="@mipmap/ic_safe_center"
                    android:drawableRight="@mipmap/ic_arrow_right"
                    android:drawablePadding="13dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingTop="36dp"
                    android:paddingBottom="16dp"
                    />

                <View style="@style/ViewLineStyle"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"/>

                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="关于我们"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:drawableLeft="@mipmap/ic_about"
                    android:drawableRight="@mipmap/ic_arrow_right"
                    android:drawablePadding="13dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingTop="34dp"
                    android:paddingBottom="18dp"
                    />

                <View style="@style/ViewLineStyle"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="27dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_logout"
                style="@style/style_btn"
                android:text="退出登录"
                android:layout_marginTop="548dp"
                android:layout_marginBottom="20dp"/>
        </FrameLayout>
    </ScrollView>
</FrameLayout>
