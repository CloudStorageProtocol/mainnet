<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <com.andjdk.library_base.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:left_image="@mipmap/back"
        app:title="关于我们" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_login_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="34dp"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="URANUS，天空的原始神，是希腊神话中的希望和未来的象征，\n为世界上的每一个角落提供光明和力量URANUS，天空的原始神，\n是希腊神话中的希望和未来的象征，为世界上的每一个角落提供光明和力量"
        android:textColor="#ffffffff"
        android:textSize="9sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/shape_corners_5_25262f"
        android:orientation="vertical"
        android:paddingLeft="31dp"
        android:paddingRight="31dp">

        <TextView
            android:id="@+id/tv_user_agreement"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@mipmap/ic_about_agreement"
            android:drawableRight="@mipmap/ic_arrow_right"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:text="用户协议"
            android:textColor="#ffa2a6b0"
            android:textSize="14sp" />

        <View style="@style/ViewLineStyle" />


        <FrameLayout
            android:id="@+id/fly_version"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@mipmap/ic_about_update_version"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="版本更新"
                android:textColor="#ffa2a6b0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_latest_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="已经是最新的版本"
                android:textColor="#ff727680"
                android:textSize="12sp" />
        </FrameLayout>

        <View
            style="@style/ViewLineStyle"
            android:layout_marginBottom="28dp" />
    </LinearLayout>


</LinearLayout>