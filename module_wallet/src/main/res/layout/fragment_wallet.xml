<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.andjdk.library_base.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:title="资产" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_create_wallet"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="创建钱包" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_import_wallet1"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="通过助记词导入钱包" />
                <Button
                    android:id="@+id/btn_import_wallet2"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="通过keystore导入钱包" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_load_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/btn_export_wallet"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="导出钱包"
                android:visibility="gone"/>


            <Button
                android:id="@+id/btn_backup_mnemoinc"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="备份助记词"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_backup_wallet"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="备份钱包"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_confirm_mnemoinc"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="确认助记词"
                android:visibility="gone"/>
            <Button
                android:id="@+id/btn_export_keystore"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="导出keystore" />

            <Button
                android:id="@+id/btn_manager"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="管理"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_recharge"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="充值" />

            <Button
                android:id="@+id/btn_transaction_record"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="交易记录" />

            <Button
                android:id="@+id/btn_transaction"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="转账" />

            <Button
                android:id="@+id/btn_add_token"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="添加资产" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>
