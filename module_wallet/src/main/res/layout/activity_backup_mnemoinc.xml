<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#161618"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.andjdk.library_base.widget.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:left_image="@mipmap/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备份助记词"
            android:textColor="#ff637100"
            android:textSize="30sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请准确抄写并安全备份助记词"
            android:textColor="#ff637200"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_word"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_mnemonic_bg"/>

    </LinearLayout>



    <Button
        android:id="@+id/btn_ok"
        style="@style/style_btn"
        android:layout_marginBottom="69dp"
        android:layout_gravity="bottom"
        android:text="下一步"/>

</FrameLayout>