<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#161618"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.andjdk.library_base.widget.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:title="转入钱包"
            app:left_image="@mipmap/back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:background="#262630"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_roll_in_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转入 URANUS 钱包"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                android:paddingBottom="15dp"
                />
            <EditText
                android:id="@+id/edit_coin_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入金额"
                android:textColorHint="#666666"
                android:textColor="@color/color_white"
                android:layout_marginTop="22dp"
                android:textSize="30sp"
                android:layout_marginBottom="25dp"
                android:background="@null"
                android:inputType="numberDecimal"
                />

            <View style="@style/ViewLineStyle"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_all_coin_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总收益：0 U"
                    android:textColor="#666666"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/tv_all_roll_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部转入"
                    android:layout_marginLeft="17dp"
                    android:textColor="#ff637200"
                    android:textSize="15sp"
                    />

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#262630"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="矿工费："
                android:layout_gravity="center_vertical"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tv_service_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 U"
                android:textColor="#666666"
                android:textSize="15sp"
                android:layout_gravity="right|center_vertical"
                />

        </FrameLayout>

    </LinearLayout>



    <Button
        android:id="@+id/btn_sure"
        style="@style/style_btn"
        android:text="确定"
        android:layout_gravity="bottom"
        android:layout_marginBottom="33dp"/>

</FrameLayout>