<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#161618"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.andjdk.library_base.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:left_image="@mipmap/back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备份钱包"
        android:textColor="#ff637100"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获得助记词等于拥有钱包资产所有权"
        android:textColor="#ff637200"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/btn_bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备份助记词"
            android:textColor="#ff637200"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用纸和笔正确抄写助记词\n如果你的手机丢失、被盗、损坏，助记词将可以
恢复你的财产"
        android:textColor="#ff637200"
        android:layout_marginLeft="35sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="5dp"
        android:textSize="15sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/btn_bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离线保管"
            android:textColor="#ff637200"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="妥善保管至隔离网络的安全地方\n请勿将助记词在联网环境下分享和存储，比如邮件、相册、社交应用。"
        android:textColor="#ff637200"
        android:lineSpacingExtra="5dp"
        android:layout_marginLeft="35sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        />


    <Button
        android:id="@+id/btn_create_wallet"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="备份助记词"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@drawable/btn_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="119dp"
        android:layout_marginBottom="69dp"
        />
</LinearLayout>