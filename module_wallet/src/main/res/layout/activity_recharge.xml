<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true">

    <com.andjdk.library_base.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:title="充值"
        app:left_image="@mipmap/back"/>


    <ImageView
        android:id="@+id/iv_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/usdt"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_roll_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="转入 USDT"
        android:textColor="#ffffffff"
        android:textSize="19sp"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_corners_10_262630">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长按可保存二维码"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            />

        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="220dp"
            android:layout_height="220dp"/>


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/tv_copy_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复制地址"
            android:textColor="#ffa2ad44"
            android:layout_marginTop="13dp"
            android:textSize="13sp"
            android:layout_marginBottom="34dp"
            android:drawablePadding="6dp"
            android:drawableLeft="@mipmap/wallet_recharge_copy"
            />

    </LinearLayout>

</LinearLayout>