<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161618"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:gravity="center_horizontal"
        android:src="@mipmap/ic_login_head" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="39dp">

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@null"
            android:drawableLeft="@mipmap/ic_login_user"
            android:drawablePadding="14dp"
            android:hint="邮箱"
            android:textColor="#FFFFFF"
            android:textColorHint="#727680"
            android:textSize="15sp" />

        <View
            style="@style/ViewLineStyle"
            android:layout_gravity="bottom" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="39dp">

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@null"
            android:drawableLeft="@mipmap/ic_login_password"
            android:drawablePadding="14dp"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#727680"
            android:textSize="15sp" />

        <View
            style="@style/ViewLineStyle"
            android:layout_gravity="bottom" />
    </FrameLayout>


    <Button
        android:id="@+id/btn_login"
        style="@style/style_btn"
        android:layout_marginTop="76dp"
        android:text="登录" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="50dp">

        <TextView
            android:id="@+id/tv_enter_modify_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="#ffa2a6b0"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_enter_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="没有账号？去注册"
            android:textColor="#ffa2a6b0"
            android:textSize="11sp" />
    </FrameLayout>


</LinearLayout>