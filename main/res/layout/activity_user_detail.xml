<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg"
    android:fitsSystemWindows="true">

    <com.andjdk.library_base.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:left_image="@mipmap/back"/>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="35dp"
        android:background="@mipmap/bg_user_detail"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fly_user_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                android:paddingTop="35dp"
                android:paddingLeft="27dp"
                android:paddingBottom="27dp"
                android:drawableRight="@mipmap/ic_user_detail_arrow_right"
                android:paddingRight="27dp"
                />
            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@mipmap/avatar"
                android:layout_marginTop="13dp"
                android:layout_marginRight="54dp"
                android:layout_marginBottom="13dp"
                android:layout_gravity="right"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fly_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                android:paddingLeft="27dp"
                android:paddingBottom="39dp"
                android:drawableRight="@mipmap/ic_user_detail_arrow_right"
                android:paddingRight="27dp"
                />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JIANG"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                android:layout_gravity="right"
                android:layout_marginRight="62dp"
                />
        </FrameLayout>

    </LinearLayout>



</LinearLayout>
